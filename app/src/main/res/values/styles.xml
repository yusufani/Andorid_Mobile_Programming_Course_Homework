<resources>

    <!-- Base application theme. -->
    <!-- Light/Day mode  theme -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">#4086AF</item>
        <item name="android:textColor">#FCFCFC</item>
        <item name="android:editTextColor">#F57C00</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#2196F3</item>
        <item name="colorPrimaryDark">#1976D2</item>
        <item name="backgroundcolor">#80D8FF</item>
        <item name="cardbackground">#ffffff</item>
        <item name="textcolor">#F57C00</item>
        <item name="tintcolor">#ffffff</item>
        <item name="android:buttonStyle">@style/FooButton</item>
        <item name="buttonStyle">@style/FooButton</item>
        <item name="buttoncolor">#004D40</item>
        <item name="android:textCursorDrawable">@color/white</item>



    </style>
    <style name="darkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="android:background">#000000</item>
        <item name="android:textColor">#880E4F</item>
        <item name="android:editTextColor">#F57C00</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#D10F0F</item>
        <item name="colorPrimaryDark">#350616</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundcolor">#FA0000</item>
        <item name="cardbackground">#FF0000</item>
        <item name="textcolor">#F57C00</item>
        <item name="android:buttonStyle">@style/FooButton</item>
        <item name="buttonStyle">@style/FooButton</item>



    </style>
    <style name="myEditText" parent="@style/darkTheme">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>


    <style name="FooButton" parent="Widget.AppCompat.Button">
        style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
        <item name="android:background">@drawable/button_dark</item>
    </style>





</resources>
